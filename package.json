{
  "name": "react-atomicus",
  "license": "MIT",
  "main": "build/react-atomicus.umd.js",
  "module": "build/react-atomicus.es5.js",
  "typings": "build/typings/index.d.ts",
  "author": "Waldemar Penner",
  "repository": {
    "type": "git",
    "url": "https://github.com/w0wka91/react-atomicus"
  },
  "files": [
    "build"
  ],
  "version": "0.0.0-development",
  "jest": {
    "collectCoverageFrom": [
      "src/components/**/*.{tsx}",
      "!<rootDir>/node_modules/"
    ]
  },
  "dependencies": {
    "@emotion/core": "^10.0.10",
    "dayjs": "^1.8.14",
    "emotion": "^10.0.9",
    "polished": "^3.4.1"
  },
  "scripts": {
    "start": "docz dev",
    "build": "docz build",
    "prebuild:lib": "yarn run build:types",
    "build:lib": "rollup -c rollup.config.js",
    "build:types": "tsc --isolatedModules false --declaration true --noEmit false --emitDeclarationOnly",
    "test": "react-scripts test --coverage",
    "semantic-release": "semantic-release",
    "prepublishOnly": "yarn run build:lib"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "resolutions": {
    "docz*/**/babel-loader": "8.0.5",
    "docz/**/webpack": "4.28.4"
  },
  "devDependencies": {
    "@babel/cli": "7.4.4",
    "@babel/core": "7.4.5",
    "@babel/plugin-proposal-class-properties": "7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "7.4.4",
    "@babel/preset-env": "7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "7.3.3",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@hbetts/parse-repository-url": "^2.1.2",
    "@testing-library/react": "^8.0.1",
    "@types/jest": "24.0.15",
    "@types/node": "12.0.10",
    "@types/react": "16.8.22",
    "@types/react-dom": "16.8.4",
    "babel-preset-minify": "^0.5.0",
    "docz": "^1.2.0",
    "docz-theme-default": "^1.2.0",
    "feather-icons": "^4.22.1",
    "husky": "^2.4.1",
    "jest-dom": "^3.5.0",
    "prettier": "1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1",
    "rollup": "^1.15.6",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.0.3",
    "rollup-plugin-size-snapshot": "^0.9.0",
    "rollup-plugin-svg": "^1.0.1",
    "semantic-release": "^15.13.16",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.2"
  }
